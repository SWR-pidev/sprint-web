{% extends 'default/Back/squelette.html.twig' %}

{% block content %}

    <div class="container">

        <div class="row page-titles">

            <div class="col-md-5 align-self-center">
                <h3 class="text-themecolor">Create new Delivery</h3>
            </div>

            <div>
                <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="cad">
                    <div class="card-body">
                        {{ form_start(form, {'method': 'post', 'attr': {'class': '"m-t-40'}}) }}
                        {#                        <form class="m-t-40"  method="post">#}
                        <div class="form-group">
                            <h5>Deliveryman ID :<span class="text-danger">*</span></h5>
                            <div class="controls">
                                {#                                    <input type="text" name="name" class="form-control" required data-validation-required-message="This field is required"> </div>#}
                                {{ form_widget(form.iddman, { 'attr': {'placeholder':'DeliveryMan Id','type':'number','class':'form-control'} }) }}</div>
                            {% for errorItem in form.iddman.vars.errors %}
                                <span class="help-inline">{{ errorItem.message }}</span>
                            {% endfor %}
                        </div>
                        <div class="form-group">
                            <h5>Date Delivery :<span class="text-danger">*</span></h5>
                            <div class="controls">
                                {#                                    <input type="text" name="description" class="form-control" required data-validation-required-message="This field is required"> </div>#}
                                {{ form_widget(form.dated, { 'attr': {'placeholder':'Date Delivery','class':'form-control' } }) }}</div>
                            {% for errorItem in form.dated.vars.errors %}
                                <span class="help-inline">{{ errorItem.message }}</span>
                            {% endfor %}
                        </div>

                        <div class="form-group">
                            <h5>Item :<span class="text-danger">*</span></h5>
                            <div class="controls">
                                {{ form_widget(form.item, { 'attr': {'placeholder':'Date Delivery','class':'form-control'} }) }}</div>
                            {% for errorItem in form.item.vars.errors %}
                                <span class="help-inline">{{ errorItem.message }}</span>
                            {% endfor %}
                        </div>
                        <div class="form-group">
                            <h5>Housing :<span class="text-danger">*</span></h5>
                            <div class="controls">
                                {{ form_widget(form.idh, { 'attr': {'placeholder':'Housing id','type':'number','class':'form-control'} }) }}</div>
                            {% for errorItem in form.idh.vars.errors %}
                                <span class="help-inline">{{ errorItem.message }}</span>
                            {% endfor %}
                        </div>



                        <div class="text-xs-right">
                            {{ form_widget(form.save, { 'attr': {'class':'btn btn-info'} }) }}
                            {#                                <button type="submit" class="btn btn-info">Submit</button>#}
                            <button type="reset" class="btn btn-inverse">Cancel</button>
                        </div>
                        {{ form_end(form) }}


                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}