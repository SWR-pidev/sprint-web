{% extends 'default/Back/squelette.html.twig' %}
{% block content %}
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor"> List Users</h3>
        </div>

        <div>
            <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div>
                        <a href="{{ path("User_backcreation") }}"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Add New User</button></a>
                    </div>
                    <br/>
                    <div class="table-responsive m-t-40">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Last Name</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Username:</th>
                                <th>Last Login</th>
                                <th class="text-nowrap">Action</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Last Name</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Username:</th>
                                <th>Last Login</th>
                                <th class="text-nowrap">Action</th>
                            </tr>
                            </tfoot>
                            <tbody>
                            {% for elt in listUsers %}
                                <tr>

                                    <td>{{ elt.id }}</td>
                                    <td>
                                        {{ elt.Lastname }}
                                    </td>
                                    <td>
                                        {{ elt.Firstname }}
                                    </td>
                                    <td>
                                        {{ elt.country }}
                                    </td>
                                    <td>
                                        {{ elt.email }}
                                    </td>
                                    <td>
                                        {{ elt.tel }}
                                    </td>
                                    <td>
                                        {{ elt.userName }}
                                    </td>
                                    <td>
                                        {{ elt.lastLogin | date }}
                                    </td>


                                    <td class="text-nowrap">
                                        <a href="{{ path('User_backupdate',{'id':elt.id}) }}" data-toggle="tooltip"  data-original-title="Edit"> <i class="fa fa-edit"></i> </a>
                                        <a href="{{ path('User_backdelete',{'id':elt.id}) }}" data-toggle="tooltip" data-toggle="modal" data-target="#deleteModel" data-original-title="Delete"> <i class="fa fa-trash"></i></i> </a>
                                    </td>


                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>


{% endblock %}