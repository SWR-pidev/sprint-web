{% extends ":default:index.html.twig" %}


{% block content %}
    <section class="parallax-window xs-become-a-volunteer xs-section-padding" style="background-image: url('{{ asset('Front/assets/images/backgrounds/volunteer-bg.jpg') }}')">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-lg-7">
                    <div class="xs-volunteer-form-wraper bg-aqua">
                        <h2>Donate Goods</h2>
                        <p>It only takes a minute to set up a donate goods. Decide what to do. Pick a name. Pick a photo. And just like that, youâ€™ll be ready to start helping refugees.</p>
{#                        <form action="#" method="POST" id="volunteer-form" class="xs-volunteer-form">#}
                            {{ form_start(form,{'method': 'post', 'attr': {'class': 'xs-volunteer-form'}}) }}
                            <div class="row">

                                <div class="col-lg-6">

                                    {{ form_widget(form.idh, { 'attr':{'class':'form-control','Placeholder':'Housing'} }) }}
                                    {% for errorItem in form.idh.vars.errors %}
                                        <span class="alert-danger">{{ errorItem.message }}</span><br/>
                                    {% endfor %}
                                </div>
                                <div class="col-lg-6 xs-mb-20">
                                    {{ form_widget(form.item, { 'attr':{'class':'form-control','Placeholder':'Item'} }) }}
                                    {% for errorItem in form.item.vars.errors %}
                                        <span class="alert-danger">{{ errorItem.message }}</span><br/>
                                    {% endfor %}
                                </div>
                                <div class="col-lg-6">
                                    {{ form_widget(form.qcollected, { 'attr':{'class':'form-control','Placeholder':'Quantity you wish to give'} }) }}
                                    {% for errorItem in form.qcollected.vars.errors %}
                                        <span class="alert-danger">{{ errorItem.message }}</span><br/>
                                    {% endfor %}
                                </div>
                                <div class="col-lg-6">
                                    {{ form_widget(form.status, { 'attr':{'class':'form-control','Placeholder':'Choose food'} }) }}
                                    {% for errorItem in form.status.vars.errors %}
                                        <span class="alert-danger">{{ errorItem.message }}</span><br/>
                                    {% endfor %}
                                </div>
                            </div><!-- .row end -->
                            {{ form_widget(form.Contribute, { 'attr':{'class':'btn btn-info'} }) }}
                            {{ form_end(form) }}<!-- #volunteer-form .xs-volunteer-form END -->
                    </div>
                </div>
            </div><!-- .row end -->
        </div><!-- .container end -->
    </section>


{% endblock %}

