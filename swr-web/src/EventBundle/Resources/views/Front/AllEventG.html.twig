{% extends 'default/Front/squelette.html.twig' %}
{% block title %} Events Gallery{% endblock %}
   {% block login %}{% endblock %}
{% block userinfo %}
    <li><a href="faq.html" >

      <p class="d-flex-center-end"><i class=" xs-round-avatar">{% block userimg %}<img src="{{ asset('../../swr/web/uploads/') }}{{ u.image }}" class="" >{% endblock %}</i>{% block user %} {{ u }}{% endblock %} </p>




   </a></li>{% endblock %}

{% block logout %}  <li><a href="{{ path('fos_user_security_logout') }}">log out</a></li>{% endblock %}

{% block check %} {% endblock %}

{% block content %}
    <section class="xs-banner-inner-section parallax-window" style="background-image:url('{{ asset('Front/assets/images/backgrounds/event_bg.jpg') }}')">
        <div class="xs-black-overlay"></div>
        <div class="container">
            <div class="color-white xs-inner-banner-content">
                <h2>Events</h2>
                <p>Give a helping hand for Refugees</p>
                <ul class="xs-breadcumb">
                    <li class="badge badge-pill badge-primary"><a href="" class="color-white"> Home /</a> Events</li>
                </ul>
            </div>
        </div>
    </section>
        <main class="xs-main">
            <!-- video popup section section -->
            {% for i in evt %}
            <section class="parallax-window xs-content-section-padding" style="background-image: url('{{ asset('Front/assets/images/parralax_3.jpg') }}')">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="xs-service-slider-content">
                                <h2>{{ i.nameEvt }}</h2>
                                <div class="xs-service-grow row">
                                    <div class="col-md-4" >
                                        <h3 class="float-left xs-title-underline">{{ i.nbparticipantEvt }} </h3>
                                    </div>
                                    <div class="col-md-5" style="">
                                        <h4>Peoples Attended this Event</h4>

                                    </div>
                                </div><!-- .xs-service-grow END -->
                                <div class="row">
                                    <div class="col-md-6">
                                        <ul class="xs-unorder-list check">
                                            <li>{{ i.locationEvt }}</li>
                                            <li>{{ i.dateEvt | date('Y/m/d')}}</li>
                                        </ul><!-- .xs-unorder-list .check END -->
                                    </div>
                                    <div class="col-md-6">
                                        <ul class="xs-unorder-list check">
                                            <li>Organised By :</li>
                                            <li>{{ i.organizatorEvt }}</li>
                                        </ul><!-- .xs-unorder-list .check END -->
                                    </div>
                                </div>
                            </div><!-- .xs-service-slider-content END -->
                        </div>
                        <div class="col-lg-6">
                            <div class="xs-single-item-slider owl-carousel">

                            {% for j in 0..(i.images|length)-1 %}
                                <div class="xs-single-slider-item">
                                    <img src="{{ asset('../../swr/web/uploads/Gallery/') }}{{ i.images[j]["img"] }}" alt="">
                                </div>

                            {% endfor %}
                            </div>
                        </div>
                    </div><!-- .row end -->
                </div><!-- .container end -->
            </section>	<!-- end service slider section -->
            <div class="xs-funfact-section-v2" style="background-image: url('assets/images/map_green.png')">
                <div class="container">
                    <div class="row">

                    </div><!-- .row end -->
                </div><!-- .container end -->
            </div>	<!-- end service slider section -->

{% endfor %}
        </main>








{% endblock %}