{% extends 'default/Back/squelette.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row page-titles">

            <div class="col-md-5 align-self-center">
                <h3 class="text-themecolor">Create new Housing</h3>
            </div>

            <div>
                <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <form class="m-t-40"  method="post">
                            <div class="form-group">
                                <h5>Name: <span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="text" name="name" class="form-control" required data-validation-required-message="This field is required"> </div>

                            </div>
                            <div class="form-group">
                                <h5>Description: <span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="text" name="description" class="form-control" required data-validation-required-message="This field is required"> </div>


                            <div class="form-group">
                                <h5>Quantity <span class="text-danger">*</span></h5>
                                <div class="controls">
                                    <input type="number" name="quantity" class="form-control" required data-validation-required-message="This field is required"> </div>
                            </div>
                                <div class="form-group">
                                    <h5>Status <span class="text-danger">*</span></h5>
                                    <div class="input-group">
                                        <select class="form-control"  name="status" required data-validation-required-message="This field is required">

                                                <option selected value="Waiting">Waiting</option>
                                                <option  value="Collected">Collected</option>

                                        </select>
                                    </div>

                                </div>
                            <div class="form-group">
                                <h5>Housing <span class="text-danger">*</span></h5>
                                <div class="input-group">
                                    <select class="form-control"  name="idh" required data-validation-required-message="This field is required">
                                        {% for hs in housings  %}
                                            <option value="{{ hs.idh }}">{{ hs.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                            </div>





                            <div class="text-xs-right">
                                <button type="submit" class="btn btn-info">Submit</button>
                                <button type="reset" class="btn btn-inverse">Cancel</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>


{% endblock %}


