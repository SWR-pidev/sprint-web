                        <ul class="comment-list">
                            {% for rating in ratings %}
                                <li class="comment">
                                    <div class="comment-body">
                                        <div class="comment-meta">
                                            <div class="comment-author">

                                                <img alt="avatar" src="{{ asset("Front/assets/images/avatar/"~ rating.iduser.getImage() ) }}" class="avatar">
                                                <b>{{ rating.iduser.getFirstname()|upper }} {{ rating.iduser.getLastname() }}</b>
                                            </div><!-- .comment-author -->
                                            <div class="comment-metadata">
                                                {% for i in 0..(rating.rating-1) %}
                                                    <span class="fa fa-star checked"></span>

                                                {% endfor %}
                                              </div><!-- .comment-metadata -->
                                        </div><!-- .comment-meta -->

                                        <div class="comment-content">
                                            <p>{{ rating.feedback }}</p>
                                        </div><!-- .comment-content -->

                                    </div><!-- .comment-body -->
                                </li><!-- #comment-## -->
                            {% endfor %}

                        </ul>
                        <div class="comment-respond">
                            <h3 class="comment-reply-title">Leave a Review</h3>

                            <form method="POST" action="{{ path('housing_rating') }}" class="comment-form">
                                <input  name="idhouse"  value="{{ housings.idh }}" hidden type="number">
                                {% if app.user %}
                                <input  name="iduser"  value="{{ app.user.id}}" hidden type="number">

                                <input placeholder="Enter Name *" name="author" disabled value="{{ app.user.username }}" type="text">

                                <div class="row">
