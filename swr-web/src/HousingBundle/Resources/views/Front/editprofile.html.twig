{#                            </div>#}
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Current password</label>
                                <div class="col-lg-9">
                                    {{ form_widget(form.current_password, { 'attr':{'placeholder':'Current Password','class':'form-control'} }) }}

                                    {#                                    <input class="form-control" type="password" value="">#}
                                </div>
                            </div>
                            <div class="form-group row">
                            <div class="custom-file">
                                <div>{{ form_widget(form.image, { 'attr': {'type':'file','class':'custom-file-input','id':'customFile','value':app.user.image} }) }}</div>

